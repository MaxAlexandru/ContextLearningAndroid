<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.max.app.contextlearning.ScenariosAdd">

    <TextView
        android:padding="5dp"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"/>

    <EditText
        android:id="@+id/scenario_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="5dp"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conditions"/>

    <ListView
        android:id="@+id/new_scenario_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
    </ListView>

    <TextView
        android:padding="5dp"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Effect"/>

    <Spinner
        android:id="@+id/tasks_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Spinner>

    <Button
        android:id="@+id/save_scenario_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:text="Save Scenario"/>

</LinearLayout>
