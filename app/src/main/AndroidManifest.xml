        <!--<receiver android:name="com.max.app.contextlearning.SaveReceiverTooQuiet" />-->
        <!--<receiver android:name="com.max.app.contextlearning.SaveReceiverTooLoud" />-->

        <activity
            android:name="com.max.app.contextlearning.NotificationView"
            android:parentActivityName="com.max.app.contextlearning.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.max.app.contextlearning.MainActivity" />
        </activity>
        <activity android:name="com.max.app.contextlearning.SettingsActivity" />
        <activity android:name="com.max.app.contextlearning.ReadEnvActivity" />

        <activity android:name="com.max.app.contextlearning.DisplayBroadcast" />
        <activity android:name="com.max.app.contextlearning.ScenariosAdd" />
        <activity android:name="com.max.app.contextlearning.ActivitiesActivity" />
